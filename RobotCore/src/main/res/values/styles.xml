    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- Theme customizations available in newer API levels can go in res/values-vXX/styles.xml,
        while customizations related to backward-compatibility can go here. -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/FtcTextViewStyle</item>
        <item name="android:buttonStyle">@style/FtcButtonStyle</item>
        <item name="textWhite">@color/text_white</item>
    </style>
